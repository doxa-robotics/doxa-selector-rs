import { GroupBox, VerticalBox, StandardTableView, Button, ScrollView, Palette, HorizontalBox } from "std-widgets.slint";
export component DiagnosticsPopup {
    in property <[[StandardListViewItem]]> diagnostics;
    callback refresh();
    callback done();

    Rectangle {
        background: Palette.background;
        vertical-stretch: 1;

        Image {
            x: parent.width - self.width;
            y: parent.height - self.height;
            opacity: 0.2;
            source: @image-url("../examples/doxa-logo-cropped.png");
        }

        VerticalLayout {
            padding: 8px;
            HorizontalLayout {
                height: 28px;
                spacing: 8px;
                Text {
                    text: "Diagnostics";
                    font-size: 24px;
                    horizontal-stretch: 1;
                }

                Button {
                    text: "Refresh";
                    clicked => {
                        refresh()
                    }
                }

                Button {
                    text: "Done";
                    clicked => {
                        done()
                    }
                }
            }

            VerticalLayout {
                vertical-stretch: 1;

                StandardTableView {
                    width: 100%;
                    height: 100%;

                    columns: [
                        { title: "Name" },
                        { title: "Value" },
                    ];
                    rows: diagnostics;
                }
            }
        }
    }
}
